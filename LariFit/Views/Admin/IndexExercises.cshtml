@model IEnumerable<LariFit.Models.Trainings.Exercise>

<form asp-controller="Admin" asp-action="AddExercise" method="get">
    <button type="submit" class="btn btn-sm btn-success">
        Добавить упражнение
    </button>
</form>

<table class="table">
    <tr>
        <th>Название</th>
        <th>Калл/час</th>
    </tr>

        @foreach (var exercise in Model)
        {
        <tr>
            <td>@exercise.Title</td>
            <td>@exercise.CaloriesPerHour</td>
            <td>
                <form asp-action="DeleteExercise" asp-route-id="@exercise.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
        }
</table>