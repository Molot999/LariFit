@model LariFit.ViewModels.Trainings.CreateExerciseViewModel

<form asp-action="AddExercise" asp-controller="Trainings" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Начало</label>
        <input asp-for="StartTime" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label">Конец</label>
        <input asp-for="EndTime" class="form-control"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>

<table class="table">
    <tr>
        <th>ID</th>
        <th></th>
    </tr>

    @foreach (var exerciseSet in Model.ExerciseSets)
    {
        <tr>
            <td>@exerciseSet.Id</td>
            <td>
                <form asp-action="Delete" asp-route-id="@exerciseSet.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }

</table>