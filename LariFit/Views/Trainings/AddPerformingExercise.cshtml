@model LariFit.ViewModels.Trainings.AddPerformingExerciseViewModel

<form asp-action="AddPerformingExercise" asp-controller="Trainings" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input asp-for="Title" class="form-control"/>
    </div>
    
    <div class="form-group">
        <label asp-for="CaloriesPerHour" class="control-label">Калл/час</label>
        <input asp-for="CaloriesPerHour" class="form-control"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary"/>
    </div>
</form>

<form asp-action="AddExerciseSet" asp-controller="Trainings" method="post">
    <div class="row">
            
        <div class="col" class="form-group">
            <input type="text" placeholder="Количество" class="form-control">
        </div>

        <div class="col" class="form-group">
            <input type="text" placeholder="Вес" class="form-control">
        </div>

        <div class="col" class="form-group">
            <input type="submit" value="Добавить" class="btn btn-outline-secondary"/>
        </div>

    </div>
</form>

<table class="table">
    <tr>
        <th>Повторения</th>
        <th>Вес</th>
        <th></th>
    </tr>

    @foreach (var exerciseSet in Model.ExerciseSets)
    {
        <tr>
            <td>@exerciseSet.Reps</td>
            <td>@exerciseSet.Weight</td>
            <td>
                <form asp-action="Delete" asp-route-id="@exerciseSet.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>